<h1>
  Login
</h1>

{{#if messages}}
<div class="alert alert-danger">
  Invalid credentials
</div>
{{else}}
<div class="alert alert-info">
  Please enter your credentials
</div>
{{/if}}
<form method="post">
  <fieldset class="form-group">
    <label for="username" class="col-2 control-label">
      Username:*
    </label>
    <input
      name="username"
      id="username"
      required
      type="email"
      placeholder="email@email.com"
    />
  </fieldset>
  <fieldset class="form-group">
    <label for="password" class="col-2 control-label">
      Password: *
    </label>
    <input name="password" id="password" type="password" required />
  </fieldset>
  <fieldset class="form-group" id="login-btn">
    <button class="btn btn-info offset-3">
      Login
    </button>
    <a href="/github" class="btn btn-info offset-3">
      Login with Github
    </a>
    <hr />
    <p>Need an account?</p>
    <a href="/register" title="Register" class="register-btn">
      Register
    </a>
  </fieldset>
</form>